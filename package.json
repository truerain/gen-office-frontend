{
  "name": "gen-office",
  "private": true,
  "description": "Gen-Office - Backoffice framework",
  "scripts": {
    "build": "turbo run build",
    "dev": "turbo run dev",
    "lint": "turbo run lint",
    "test": "turbo run test",
    "format": "prettier --write \"**/*.{ts,tsx,md,json,css}\"",
    "graph": "nx graph",
    "demo" : "turbo run dev --filter=@gen-office/demo",
    "rdg" : "turbo run dev --filter=@gen-office/rdg-demo",
    "storybook": "turbo run --filter=@gen-office/storybook dev",
    "clean": "find . -name \"node_modules\" -type d -prune -exec rm -rf '{}' + && find . -name \"dist\" -type d -prune -exec rm -rf '{}' +",
    "tokens:map": "node scripts/generate-token-mapping.mjs"
  },
  "devDependencies": {
    "turbo": "latest",
    "nx": "latest",
    "prettier": "^3.4.2",
    "typescript": "5.7.2",
    "@types/react": "18.3.1",
    "@types/react-dom": "18.3.1",
    "eslint": "^9.0.0"
  },
  "packageManager": "pnpm@9.15.0",
  "pnpm": {
    "overrides": {
      "react": "18.3.1",
      "react-dom": "18.3.1",
      "typescript": "5.7.2",
      "@storybook/core": "8.6.15",
      "@storybook/addon-essentials": "8.6.15",
      "@storybook/addon-interactions": "8.6.15",
      "@storybook/addon-links": "8.6.15",
      "@storybook/react": "8.6.15",
      "@storybook/react-vite": "8.6.15",
      "@storybook/blocks": "8.6.15",
      "storybook": "8.6.15"      
    },
    "peerDependencyRules": {
      "allowAny": [],
      "ignoreMissing": [
        "react",
        "react-dom"
      ]
    }
  },
  "author": "Your Name",
  "license": "MIT",
  "engines": {
    "node": ">=20.0.0",
    "pnpm": ">=9.0.0"
  }
}
