{
  "extends": "../../packages/tsconfig/base.json",
  "compilerOptions": {
    "outDir": "./dist",
    "rootDir": "./src",
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "allowImportingTsExtensions": false,
    "noEmit": false // 빌드 시 d.ts 생성을 위해 false (Vite-plugin-dts가 활용)
  },
  "include": ["src"],
  "exclude": ["node_modules", "dist"]
}