{
  "extends": "../../packages/tsconfig/base.json",
  "compilerOptions": {
    "outDir": "./dist",
    "rootDir": "./src",
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "allowImportingTsExtensions": false,
    "jsx": "react-jsx", // 이 설정이 React 18+ 문법을 인지하게 합니다.
    "noEmit": false // 빌드 시 d.ts 생성을 위해 false (Vite-plugin-dts가 활용)
  },
  "include": ["src"],
  "exclude": ["node_modules", "dist"]
}